.event.span-14
	.span-2.event-calendar
		=render :partial => "/events/time", :locals=> {:time => event.start_time}
	.span-10.last
		%ul
			%li{:class=> "event-title", :id=> event.id}
				="#{event.recruitment_step.recruitment_step_type.name} : #{link_to(event.recruitment_step.candidate.name, candidate_url(event.recruitment_step.candidate))}"
			%li
				=label_tag "Time:"			
				="#{format_time(event.start_time)} - #{format_time(event.end_time)}"
			%li
				=label_tag "Venue:"
				=event.venue
			%li
				=label_tag "Participants:"
				=event.interviewers.map{|interview| interview.participant.name}.join(",")