.content-section.span-16
	=render :partial => "navigation"
	.events
		=render(:partial => "candidates/unscheduled_recruitment_step", :collection => @unscheduled_recruitment_steps) || (render(:partial  => "/shared/empty_collection", :locals => {:message => "No unscheduled events"}))
				
=content_for :sidebar do
	.sidebar-section
		.schedule-a-step
			%center
				=link_to "Schedule a Step", schedule_step_url, :class => "bold-button"
		%br
		.subscribe-to-ical
			%center
				=link_to "Subscribe to Calendar", calendar_url(:format => :ics), :class  => "bold-button"