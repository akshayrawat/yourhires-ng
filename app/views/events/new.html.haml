.schedule-selection.content-section.span-16
	.title
		="Event: #{@candidate.name}"
		&nbsp;

	.new-event.span-14
		-form_for(@event) do |form|
			%span{:class=> event_title_class(@event.recruitment_step)}
				=@event.recruitment_step.recruitment_step_type.name 
			%br
			%br
			=form.label :venue
			=form.text_field :venue
			%br

			=form.hidden_field :recruitment_step_id

			=form.label :start_time
			=form.datetime_select :start_time, {:include_blank => true, :minute_step => 15, :order => [:hour, :minute, :day, :month, :year], :date_separator => '/', :datetime_separator => ' at '}
			%br
			=form.label :end_time
			&nbsp;

			=form.datetime_select :end_time, {:include_blank => true, :minute_step => 15, :order => [:hour, :minute, :day, :month, :year], :date_separator => '/', :datetime_separator => ' at '}

			%br
			=form.label :comments
			%p
				=form.text_area :comment
			%center
				=form.submit "Save", :class => "bold-button"
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;				
				=link_to "Cancel", candidate_schedule_url(@candidate), :class => "bold-button"